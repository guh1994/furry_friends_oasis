<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="gustavo">
        <createTable tableName="pets">
            <column name="id_pet" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="breed_pet" type="integer">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="category_pet" type="integer">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="link_picture" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="flavio.lima">
        <!--        <createTable tableName="tutor" />-->
        <createTable tableName="owners">
            <column name="id_owner" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="varchar(64)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="photo_owner_url" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!--        <createTable tableName="activity" />-->
